[bdist_wheel]
universal = 1

[metadata]
license_file = NOTICE

[aliases]
# no register/upload for now
# pypi_release = clean --all sdist --formats=bztar,zip bdist_wheel register upload

release = clean --all sdist --formats=gztar,bztar,zip bdist_wheel

[pytest]
norecursedirs =
    .git
    bin
    dist
    build
    _build
    dist
    local
    ci
    docs
    man
    share
    samples
    .cache
    .settings
    etc
    Include
    include
    Lib
    lib
    Scripts
    thirdparty
    tmp
    src/*/data
    tests/*/data

python_files = *.py

python_classes=Test
python_functions=test

addopts =
    -rfEsxXw
    --strict
    --ignore docs/conf.py
    --ignore setup.py
    --doctest-modules
